{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src/lib",
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2018"],
    "target": "es2018",                 /* Added higher target for Map iteration */
    "module": "esnext",                /* Use modern module format */
    "downlevelIteration": true,        /* Added for Map iteration support */
    "typeRoots": ["./node_modules/@types", "./src/lib/types"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}